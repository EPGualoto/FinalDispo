<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_login">
        <item name="buttonStyle">@style/Widget.Material3.Button.ElevatedButton</item>
        <item name="backgroundTint">@color/hunter_green</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">@dimen/txt_name_size_title_5</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">10dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:drawableLeft">@drawable/fondoanime5</item>
        <item name="android:drawableTint">@color/ivory</item>
    </style>

    <style name="btn_sign_up">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.OutlinedButton</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/hunter_green</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:drawableLeft">@drawable/fondoanime</item>
        <item name="android:drawableTint">@color/hunter_green</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="btn_sign_up_registration">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.TonalButton</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:drawableTint">@color/ivory</item>
    </style>

    <style name="btn_confirm_continue">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.TextButton</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_name_size_title_3</item>
        <item name="android:textColor">@color/hunter_green</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:state_focused">true</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>