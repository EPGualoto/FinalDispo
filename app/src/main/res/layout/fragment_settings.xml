<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.main.perfil.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- settings_fragment.xml -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sección Editar perfil -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar perfil"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingVertical="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <!-- Ajustes de idioma -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajustes de idioma"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar el idioma del contenido"
                android:paddingVertical="8dp"
                android:paddingStart="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar el idioma del servicio"
                android:paddingVertical="8dp"
                android:paddingStart="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <!-- Otras secciones similares... -->

        </LinearLayout>

        <Button
            android:id="@+id/btnAppInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info de la aplicación"/>

        <Button
            android:id="@+id/btnAppReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informes de la aplicación"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
